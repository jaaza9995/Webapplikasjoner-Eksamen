@model List<Jam.ViewModels.GameCardViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Math Universe!</h1>
    <div class="d-flex justify-content-center">
        <form asp-controller="CreateGame" asp-action="CreateIntro" method="get">
        <button type="submit" class="btn btn-primary">Make New Game</button>
        </form>
        <form asp-controller="Story" asp-action="AddNewGame" method="get">
        <button type="submit" class="btn btn-primary">Add New Game</button>
        </form>
    </div>
</div>

<div>
<h2>My Games</h2>I
<div class="d-flex flex-wrap gap-3">

    @foreach (var Story in Model.Where(s => s.CardType == Jam.Models.Enums.GameCardType.MyGames))
    {
        @await Html.PartialAsync("_GameCard", Story)
    }
</div>

<div>
<h2>Recently Played</h2>
<div class="d-flex flex-wrap gap-3">

@foreach (var Story in Model.Where(s => s.CardType == Jam.Models.Enums.GameCardType.RecentlyPlayed))
{
    @await Html.PartialAsync("_GameCard", Story)
}
</div>