@model List<Jam.ViewModels.GameCardViewModel>
@{
    ViewData["Title"] = "Home Page";
}
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success text-center mt-3">
        @ViewBag.SuccessMessage
    </div>
}


<div class="text-center">
    <h1 class="display-4">Welcome to Math Universe!</h1>
<div class="d-flex justify-content-center gap-3">
    <a asp-controller="CreateGame" asp-action="Create" class="btn btn-primary">Make New Game</a>
    <a asp-controller="Story" asp-action="AddNewGame" class="btn btn-primary">Play New Game</a>
</div>
</div>

<div>
<h2>My Games</h2>
<div class="d-flex flex-wrap gap-3">

    @foreach (var Story in Model.Where(s => s.CardType == Jam.Models.Enums.GameCardType.MyGames))
    {
        @await Html.PartialAsync("_GameCard", Story)
    }
</div>

<div>
<h2>Recently Played</h2>
<div class="d-flex flex-wrap gap-3">

@foreach (var Story in Model.Where(s => s.CardType == Jam.Models.Enums.GameCardType.RecentlyPlayed))
{
    @await Html.PartialAsync("_GameCard", Story)
}
</div>