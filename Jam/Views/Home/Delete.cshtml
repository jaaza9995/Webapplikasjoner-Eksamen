@model Story

<h2>Delete Game</h2>

<h3>Are you sure you want to delete this game?</h3>
<div>
    <h4>Story</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Story Id</dt>
        <dd class="col-sm-10">@Model.StoryId</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.StoryId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>