@model Jam.ViewModels.EditStoryViewModel

<h2>Edit Story: @Model.Title</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StoryId" />

    <div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DifficultyLevel"></label>
            <select asp-for="DifficultyLevel" asp-items="Model.DifficultyLevels" class="form-control">
                <option value="">Select difficulty</option>
            </select>
            <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
        </div>
    </div>

    @for (int s = 0; s < Model.Scenes.Count; s++)
    {
        <div class="card mb-4 p-3">
            <input type="hidden" asp-for="Scenes[@s].SceneId" />

            <div class="mb-2">
                <label>Scene Text</label>
                <input asp-for="Scenes[@s].SceneText" class="form-control" />
            </div>

            @if (Model.Scenes[s].Question != null)
            {
                <div class="mb-3">
                    <label>Question</label>
                    <input asp-for="Scenes[@s].Question.QuestionText" class="form-control" />
                </div>

                <h6>Answers</h6>
                @for (int a = 0; a < Model.Scenes[s].Question.Answers.Count; a++)
                {
                    <div class="mb-2">
                        <input asp-for="Scenes[@s].Question.Answers[@a]" class="form-control" />
                    </div>
                }
                @* legg inn answer endings/feeback senere*@
                <a asp-action="DeleteQuestion" asp-route-id="@Model.Scenes[s].Question.QuestionId" class="btn btn-danger btn-sm">
                Delete Question
                </a>
            }
        </div>


        <div>
            <div class="form-group">
            <label asp-for="EndingGood"></label>
            <textarea asp-for="EndingGood" class="form-control"></textarea>
            <span asp-validation-for="EndingGood" class="text-danger"></span>

            <div class="form-group">
            <label asp-for="EndingNeutral"></label>
            <textarea asp-for="EndingNeutral" class="form-control"></textarea>
            <span asp-validation-for="EndingNeutral" class="text-danger"></span>
            
            <div class="form-group">
            <label asp-for="EndingBad"></label>
            <textarea asp-for="EndingBad" class="form-control"></textarea>
            <span asp-validation-for="EndingBad" class="text-danger"></span>
        </div>

   <a asp-action="AddQuestion" class="btn btn-secondary">Add Question</a>
    </div>
    }
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="DeleteStory" asp-route-id="@Model.StoryId" class="btn btn-danger mt-3">
        Delete Story
    </a>

</form>
