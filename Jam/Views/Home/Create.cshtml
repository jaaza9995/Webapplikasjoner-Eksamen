@model Jam.ViewModels.CreateStoryViewModel

<h2>Create New Story</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="Step" />

    <div>
        @if (Model.Step == 1)
        {
            <partial name="Partials/_CreateDetails" model="Model" />
        }
        else if (Model.Step == 2)
        {
            <partial name="Partials/_CreateQuestions" model="Model" />
        }
        else if (Model.Step == 3)
        {
            <partial name="Partials/_CreateEndings" model="Model" />
        }
    </div>

    <div class="mt-3 d-flex justify-content-between">
        @if (Model.Step > 1)
        {
            <button type="submit" name="action" value="Back" class="btn btn-secondary">Back</button>
        }

        @if (Model.Step < 3)
        {
            <button type="submit" name="action" value="Next" class="btn btn-primary">Next</button>
        }
        else
        {
            <button type="submit" name="action" value="Finish" class="btn btn-success">Finish Game</button>
        }
    </div>
</form>
