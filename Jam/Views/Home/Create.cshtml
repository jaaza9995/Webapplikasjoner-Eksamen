@model Story

<h2>Create New Item</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label><span class="text-danger">*</span>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
 
    <hr />

    <h4>Questions</h4>
    <div id="questionsContainer">
        <div class="question-box mb-3">
            <label>Question:</label>
            <input type="text" name="Questions[0].Text" class="form-control" placeholder="Write your question" />

            <label>Answer:</label>
            <input type="text" name="Questions[0].Answer" class="form-control" placeholder="Write the correct answer" />
        </div>
    </div>

    <button type="button" id="addQuestionBtn" class="btn btn-success mt-2">Add Question</button>
    <button type="submit" class="btn btn-primary mt-2">Save Story</button>
    <a asp-action="Table" class="btn btn-secondary mt-2">Back to Home</a>
</form>

<script>
    let questionIndex = 1;

    document.getElementById("addQuestionBtn").addEventListener("click", function () {
        const container = document.getElementById("questionsContainer");

        const newQuestion = document.createElement("div");
        newQuestion.classList.add("question-box", "mb-3");

        newQuestion.innerHTML = `
            <label>Question:</label>
            <input type="text" name="Questions[${questionIndex}].Text" class="form-control" placeholder="Write your question" />

            <label>Answer:</label>
            <input type="text" name="Questions[${questionIndex}].Answer" class="form-control" placeholder="Write the correct answer" />
        `;

        container.appendChild(newQuestion);
        questionIndex++;
    });
</script>