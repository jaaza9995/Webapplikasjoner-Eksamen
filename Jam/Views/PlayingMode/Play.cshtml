@model Jam.ViewModels.PlayViewModel

<div class="container mt-5">
    <h2>@Model.Title</h2>
    <p>Lives remaining: @Model.Lives</p>

    <div class="card shadow p-4 mb-4 text-center">
        <h4>@Model.Question</h4>

        <div class="d-flex flex-wrap justify-content-center gap-3">
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                // sends question id, selected answer option and lives to controller when clicking an answer
                <form asp-action="SubmitAnswer" method="post" class="answer-form m-0">
                    <input type="hidden" name="questionId" value="@Model.SceneId" />
                    <input type="hidden" name="selectedAnswerIndex" value="@i" />
                    <input type="hidden" name="lives" value="@Model.Lives" />

                    <!-- answer options  -->
                    <div class="card answer-card p-4 text-center shadow-sm border-0"
                         style="width: 260px; height: 140px; background-color: #f8f9fa; cursor: pointer; transition: 0.2s;"
                         onclick="this.closest('form').submit();">
                        <span class="fw-semibold">@Model.Answers[i]</span>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

<!-- Hover effect -->
<style>
    .answer-card:hover {
        background-color: #e9ecef;
        transform: scale(1.03);
    }
</style>
