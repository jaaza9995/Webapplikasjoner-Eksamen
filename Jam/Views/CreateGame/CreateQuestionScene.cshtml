@model Jam.ViewModels.CreateMultipleQuestionScenesViewModel

@{
    ViewData["Title"] = "Add questions";
    bool canEnd = (Model?.Questions?.Count ?? 0) >= 3;
}

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form asp-controller="CreateGame" asp-action="CreateQuestions" method="post" novalidate>
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="StoryId" />
    <input type="hidden" asp-for="PreviousSceneId" />

    @for (var q = 0; q < Model.Questions.Count; q++)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Add Question @(q + 1):</h5>

                <div class="mb-3">
                    <label class="form-label">Story context:</label>
                    <input asp-for="Questions[q].StoryText" class="form-control" placeholder="Set the scene with some context..." />
                    <span asp-validation-for="Questions[q].StoryText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Question:</label>
                    <input asp-for="Questions[q].QuestionText" class="form-control" placeholder="Write your question..." />
                    <span asp-validation-for="Questions[q].QuestionText" class="text-danger"></span>
                </div>

                <h6 class="mt-3">Answer Options:</h6>
                @for (var i = 0; i < Model.Questions[q].Answers.Count; i++)
                {
                    <div class="border rounded p-2 mb-3">
                        <div class="row g-2">
                            <div class="col-md-8">
                                <label class="form-label">Option @(i + 1)</label>
                                <input asp-for="Questions[q].Answers[i].AnswerText" class="form-control" />
                                <span asp-validation-for="Questions[q].Answers[i].AnswerText" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <div class="form-check">
                                    <input asp-for="Questions[q].Answers[i].IsCorrect" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="Questions[q].Answers[i].IsCorrect">Correct?</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-2">
                            <label class="form-label">Context to this answer</label>
                            <input asp-for="Questions[q].Answers[i].ContextText" class="form-control" placeholder="Follow-up text..." />
                            <span asp-validation-for="Questions[q].Answers[i].ContextText" class="text-danger"></span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <div class="d-flex gap-2 align-items-center">
        <button type="submit" name="submit" value="AddQuestion" class="btn btn-secondary">
            Add question
        </button>

        <button type="submit" name="submit" value="SaveAndAddEnding" class="btn btn-success" @(canEnd ? "" : "disabled")>
            Save & add ending
        </button>

        @if (!canEnd)
        {
            <span class="text-muted ms-2">Minst 3 spørsmål før du kan gå videre.</span>
        }
    </div>
</form>
