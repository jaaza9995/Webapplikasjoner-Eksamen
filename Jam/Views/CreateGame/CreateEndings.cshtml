@model Jam.ViewModels.CreateEndingsViewModel
@{
    ViewData["Title"] = "Create endings";
}

<h2>Create endings</h2>

<form asp-action="CreateEndings" method="post">
    <input type="hidden" asp-for="StoryId" />

    <div class="mb-3">
        <label class="form-label">Good ending</label>
        <textarea asp-for="GoodEnding" class="form-control" rows="3"></textarea>
        <span asp-validation-for="GoodEnding" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Neutral ending</label>
        <textarea asp-for="NeutralEnding" class="form-control" rows="3"></textarea>
        <span asp-validation-for="NeutralEnding" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Bad ending</label>
        <textarea asp-for="BadEnding" class="form-control" rows="3"></textarea>
        <span asp-validation-for="BadEnding" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>

