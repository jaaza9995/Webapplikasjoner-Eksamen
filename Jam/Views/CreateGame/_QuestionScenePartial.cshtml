@model Jam.ViewModels.CreateQuestionSceneViewModel

<div class="question-card mb-4 p-4 bg-white shadow rounded-2xl border">
    <h5>Add Question:</h5>

    <div class="mb-3">
        <label asp-for="StoryText" class="form-label">Story context:</label>
        <textarea asp-for="StoryText" class="form-control" placeholder="Set the scene..."></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="QuestionText" class="form-label">Question:</label>
        <input asp-for="QuestionText" class="form-control" placeholder="Write your question..." />
    </div>

    <h6>Answer Options:</h6>
    @for (int i = 0; i < Model.Answers.Count; i++)
    {
        <div class="mb-2 border rounded p-2">
            <input asp-for="Answers[i].AnswerText" class="form-control" placeholder="Option @(i + 1)" />
            <div class="form-check mt-1">
                <input asp-for="Answers[i].IsCorrect" class="form-check-input" type="checkbox" />
                <label asp-for="Answers[i].IsCorrect" class="form-check-label">Is correct?</label>
            </div>
            <input asp-for="Answers[i].ContextText" class="form-control mt-1" placeholder="Follow-up text..." />
        </div>
    }
</div>
