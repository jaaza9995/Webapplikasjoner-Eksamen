@using Jam.ViewModels
@using Jam.Models.Enums
@model Jam.ViewModels.GameCardViewModel

@{
    // hent ut scale parameter (standard = 1x)
    var scale = ViewData["Scale"] as double? ?? 1.0;
    var width = 18 * scale; // original width = 18rem
}

<div class="card mb-3 shadow"
     style="width:@($"{width}rem"); transform:scale(@scale); transition:0.3s;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>

        <div class="d-flex justify-content-between mb-2">
            <span>Questions: @Model.NumberOfQuestions</span>
            <span class="badge bg-secondary">@Model.DifficultyOptions</span>
        </div>

        @if (Model.Accessible.ToString() == "Public")
        {
            <div class="mb-2">
                <strong>Game Code:</strong> @Model.GameCode
            </div>
        }

        @if (Model.Highscore.HasValue)
        {
            <div class="mb-2">
                <strong>Highscore:</strong> @Model.Highscore
            </div>
        }
<div class="d-flex justify-content-between">
            @if(Model.CardType.ToString() == "MyGames")
            {
                <button class="btn btn-secondary">Edit</button>
            }
            <button class="btn btn-primary">Play</button>
        </div>
    </div>
</div>